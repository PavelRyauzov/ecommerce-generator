datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @default(autoincrement()) @id
  email     String @unique
  firstName String
  lastName  String
  password  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Collection {
  id       Int       @default(autoincrement()) @id
  title    String
  products Product[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("collection")
}

model Product {
  id               Int        @default(autoincrement()) @id
  availableForSale Boolean
  title            String
  description      String
  price            Int
  collection       Collection @relation(fields: [collectionId], references: [id])
  collectionId     Int
  images           Image[]    @relation("AllImages")
  featuredImage    Image?     @relation("FeaturedImage")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("product")
}

model Image {
  id           Int      @default(autoincrement()) @id
  fileName     String
  altText      String
  product      Product  @relation("AllImages", fields: [productId], references: [id])
  productId    Int
  featuredBy   Product? @relation("FeaturedImage", fields: [featuredById], references: [id])
  featuredById Int?     @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("image")
}
